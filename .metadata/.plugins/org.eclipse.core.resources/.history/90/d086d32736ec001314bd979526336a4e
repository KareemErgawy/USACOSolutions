#include <iostream>
#include <fstream>
#include <queue>
#include <set>
using namespace std;

long next(long x) {
	long b = x & -x;
	long t = x + b;
	long c = x ^ t;
	long m = (c >> 2) / b;
	return t | m;
}

int main() {

	ifstream fin("kimbits.in");
	ofstream fout("kimbits.out");

	int n, l, i;

	fin >> n >> l >> i;

	set<long, greater<long> > undiscovered;
	for (int i = 0; i < l; i++) {
		undiscovered.insert(1 << (i + 1) - 1);
	}

	long smallest;
	for (int j = 0; j < i; j++) {
		smallest = *undiscovered.begin();
		long nextNum = next(smallest);
		undiscovered.insert(nextNum);
		undiscovered.erase(smallest);
	}

	cout << smallest << endl;

	return 0;
}
